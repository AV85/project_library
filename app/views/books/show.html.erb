<div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-12">
      <div class="card">
        <div class="card-body">
          <%= render 'books/partials/left_sidebar' %>
        </div>
      </div>
    </div>
    <div class="col-lg-9 col-md-12">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-start">
            <div class="col-lg-6 col-md-12">
              <%- if @book.image.attached? %>
                <%= image_tag @book.image, class: "card-img-top img-thumbnail" %>
              <%- else %>
                <%= image_tag 'no_img.png', class: 'card-img-top img-thumbnail' %>
              <%end %>
            </div>
            <div class="col-lg-6 col-md-12">
              <h4><span class="grey-small-text">Title: </span><%= @book.name %></h4>
              <hr>
              <h4><span class="grey-small-text">Description: </span><%= @book.description %></h4>
              <hr>
              <%- @book.authors.each do |author| %>
                <h4><span class="grey-small-text">Author: </span> <%= author.first_name %> <%= author.last_name %></h4>
              <% end %>
              <hr>
              <p class="card-text grey-small-text"><%= fa_icon('clock')%> <%= @book.updated_at %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>